<%= form_tag(users_url, method: 'post') do %>
  <div class="signup">

  <div>
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :entity %><br />
    <%= text_field_tag :entity %>
  </div>

  <div>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= label_tag :password_confirmation %><br />
    <%= password_field_tag :password_confirmation %>
  </div>

  <div>
    <%= submit_tag "Create User", class: "btn btn-large btn-primary" %>
  </div>

  <% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
  </div>
<% end %>
