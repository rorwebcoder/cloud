<h1>Editing User #<%= @user.id %></h1>


<%= form_tag(user_url(@user), method: 'put') do %>

  <div>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, @user.email %>
  </div>

  <div>
    <%= label_tag :first_name %><br />
    <%= text_field_tag :first_name, @user.first_name %>
  </div>

  <div>
    <%= label_tag :last_name %><br />
    <%= text_field_tag :last_name, @user.last_name %>
  </div>

  <div>
    <%= label_tag :entity %><br />
    <%= text_field_tag :entity, @user.entity %>
  </div>

  <div>
    <%= label_tag :password %><br />
    <%= password_field_tag :password, @user.password %>
  </div>

    <div>
    <%= label_tag :password_confirmation %><br />
    <%= password_field_tag :password_confirmation %>
  </div>


  <div>
    <%= submit_tag "Update User", class: "btn btn-large" %>
  </div>

<% end %>
