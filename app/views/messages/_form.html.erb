<%= form_for @message, :url => load_messages_url, :method => :post  do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :parent_id %>
  <p>
    <%= f.label :content, "New Message" %><br />
    <%= f.text_area :content, :rows => 8 %>
  </p>
  <p><%= f.submit "Post Message", class: "btn btn-large" %></p>
<% end %>
